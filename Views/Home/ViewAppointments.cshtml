@{
    ViewBag.Title = "Scheduled Appointments";

}
@model LaytonTempleTours.Models.ViewModels.TourViewModel
<div>
    <h2>Here are the submitted appointments.</h2>   
    <table  class="table table-striped">
        <thead>
            <tr>
                <th>Scheduled Time</th>
                <th>Group Name</th>
                <th>Group Size</th>
                <th>Email Address</th>
                <th>Phone Number</th>

            </tr>
        </thead>
        <tbody>
            @foreach ( var x in Model.GroupInfos){ 

            <tr>

                <td>@x.TimeSlot</td>
                <td>@x.Name</td>
                <td>@x.Size</td>
                <td>@x.Email</td>
                <td>@x.PhoneNumber</td>

            </tr>

            }
        </tbody>
    </table>
</div>